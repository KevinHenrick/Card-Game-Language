OBJS = scanner.cmo parser.cmo corelibrary.cmo generator.cmo test.cmo

test: $(OBJS)
	ocamlc -o test $(OBJS)

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli: parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

.PHONY : clean
clean :
	rm -rf *.cmo *.cmi test parser.mli parser.ml scanner.ml

# generated by ocamldep
corelibrary.cmo:
corelibrary.cmx:
generator.cmo: corelibrary.cmo ast.cmi
generator.cmx: corelibrary.cmx ast.cmi
parser.cmo: ast.cmi parser.cmi
parser.cmx: ast.cmi parser.cmi
scanner.cmo: parser.cmi ast.cmi
scanner.cmx: parser.cmx ast.cmi
test.cmo: scanner.cmo parser.cmi generator.cmo
test.cmx: scanner.cmx parser.cmx generator.cmx
ast.cmi:
parser.cmi: ast.cmi